extends layout

block content
    .container
        -for(var prop in json)
            p #{json[prop].username}
            form(role='form', action="/editAcc",method="post", style='max-width: 300px;')
                    .form-group
                        input(name='userId', value=json[prop].id, type='hidden')
                    .form-group
                        input.form-control(type='text', name="username", placeholder='Enter Username')
                    button.btn.btn-default(type='submit') Submit
            &nbsp;